<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/main.css">
    <title>Verificar documentos</title>
</head>
<body>
    <div class="container">
        <h1 class="page-title">Verificar documentos</h1>
        <% if (typeof success !== 'undefined') { %>
            <div class="mt-2">✅ <%= success %></div>
        <% } %>
        <form action="/config/verify" method="post" enctype="multipart/form-data">
            <div>
                <label>Nombre completo</label>
                <input type="text" name="name" required>
            </div>
            <div>
                <label>DNI</label>
                <input type="text" name="dni" required>
            </div>
            <div>
                <label>Motivo</label>
                <textarea name="motivo" placeholder="Motivo por el que subís la documentación" required></textarea>
            </div>
            <div>
                <label>Documentación (hasta 5 archivos)</label>
                <input type="file" name="documents" multiple>
            </div>
            <button type="submit">Enviar</button>
        </form>
    </div>
</body>
</html>

